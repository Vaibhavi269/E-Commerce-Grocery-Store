@model RegisterModel
@{ ViewData["Title"] = "Register"; }

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



<div class="row">
    <div class="col-md-8">
        <h4>Register User</h4>
        <hr />
        @if (ViewBag.ErrorMessage != null)
        {
    <div class="text-danger">@ViewBag.ErrorMessage</div>}

        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="FullName" class="col-md-2 col-form-label"></label>
                <div class="col-md-6">
                    <input asp-for="FullName" value="@Model.FullName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Username" class="col-md-2 col-form-label"></label>
                <div class="col-md-6">
                    <input asp-for="Username" value="@Model.Username" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="col-md-2 col-form-label"></label>
                <div class="col-md-6">
                    <input asp-for="Email" value="@Model.Email" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 col-form-label"></label>
                <div class="col-md-6">
                    <input asp-for="Password" value="@Model.Password" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="RePassword" class="col-md-2 col-form-label"></label>
                <div class="col-md-6">
                    <input asp-for="RePassword" value="@Model.RePassword" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6 offset-md-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>

        </form>

    </div>
</div>
