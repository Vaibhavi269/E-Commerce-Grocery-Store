@model CategoryListViewModel


      @foreach (var item in Model.Categories)
        {
    <a asp-controller="Shop"
       asp-action="List"
       asp-route-category="@item.Name.ToLower()"
       class="dropdown-item @(Model.SelectedCategory==item.Name.ToLower()?"active":"")">
        @item.Name
    </a>}



