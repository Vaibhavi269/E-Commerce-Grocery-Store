@model AddressModel

<div>
    <form asp-controller="Home" asp-action="AddAddress" method="post">

        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="UserId" value="@Model.UserId" />
        <input type="hidden" asp-for="AddressType" value="@Model.AddressType" />
        <div class="form-group row">
            <label asp-for="FullName" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="FullName" value="@Model.FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Address1" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="Address1" value="@Model.Address1" class="form-control" />
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="City" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="City" value="@Model.City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="State" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="State" value="@Model.State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Country" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="Country" value="@Model.Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PostalCode" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="PostalCode" value="@Model.PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Phone" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="Phone" value="@Model.Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-md-2 col-form-label"></label>
            <div class="col-md-6">
                <input asp-for="Email" value="@Model.Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

    </form>
</div>